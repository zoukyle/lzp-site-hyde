<!DOCTYPE html>
<html lang="en">
  <head>
    {% block starthead %}{% endblock starthead %}
    <meta charset="{{ resource.meta.charset }}">
    <title>{% block title %}{{ resource.meta.title }}{% endblock %} | {{ site_title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="liangzou photography, best portrait photographer, best bay area photographer, best corporate photographer, best event photographer">
    <meta name="author" content="Liang Zou">

    {# Le HTML5 shim, for IE6-8 support of HTML elements #}
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    {% block basecss %}
    <link href="{{ media_url('css/bootstrap.css') }}" rel="stylesheet">
    {% endblock basecss %}
    {% block css %}{% endblock %}
    {% block favicons %}
    {# Place favicon.ico & apple-touch-icon.png in the root of your domain and delete these references #}
    <link rel="shortcut icon" href="{{ media_url('images/favicon.ico') }}">
    {% endblock favicons %}
    
    {% block headjs %}
      <!-- Add jQuery library -->
      <script type="text/javascript"
        src="{{ media_url('fancybox/lib/jquery-1.10.1.min.js') }}"></script>
      <script src="{{ media_url('js/bootstrap.min.js') }}"></script>
    {% endblock headjs %}

    {% block endhead %}{% endblock endhead %}
  </head>

  <body class="{{ resource.meta.id if resource.meta.id else resource.slug }}">
    {% block analytics %}
    {% include "analytics.j2" %}
    {% endblock analytics %}
    {% block body %}
    <div class="container-fluid">
      {% block container %}
      {% endblock container %}
      <hr>
    </div><!-- /container-fluid -->
    <footer class="footer">
      {% block footer %}
      <p class="text-center">ALL IMAGES &copy; Liang Zou Photography
      2012-{{ time_now.strftime('%Y') }} | California US</p>
      {% endblock footer %}
    </footer>

    {% endblock body %}
    
    {% block js %}
    {% block scripts %}
    {% endblock scripts %}

    <!--[if lt IE 7 ]>
      <script src="{{ media_url('js/libs/dd_belatedpng.js') }}"></script>
      <script>DD_belatedPNG.fix('img, .png_bg'); // Fix any <img> or .png_bg bg-images. Also, please read goo.gl/mZiyb </script>
    <![endif]-->

    {% endblock js %}
  </body>
</html>
